<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do-List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
            <% newItems.forEach(function(items){ %>
                <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" value="<%= items._id %>" name="checkbox" onchange="this.form.submit()">
                    <p><%= items.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
            <% }); %>

        <form action="/" method="POST">
            <input type="text" name="item" placeholder="New Task" autocomplete="off" required>
            <button type="submit" name="button" value="<%=listTitle%>">+</button>
        </form>
    </div>


    
</body>

</html>